import tkinter as tk
from tkinter import messagebox
import os

class TaskbarAppChanger:
    def __init__(self, master):
        self.master = master
        self.master.title("Taskbar App Changer")
        self.master.geometry("300x200")

        self.label = tk.Label(master, text="Enter the names of applications (comma-separated):")
        self.label.pack(pady=10)

        self.app_names_entry = tk.Entry(master)
        self.app_names_entry.pack(pady=10)

        self.change_button = tk.Button(master, text="Change Taskbar Order", command=self.change_taskbar_order)
        self.change_button.pack(pady=10)

    def change_taskbar_order(self):
        app_names = self.app_names_entry.get().split(',')
        app_names = [app.strip() for app in app_names if app.strip()]

        if not app_names:
            messagebox.showinfo("Error", "Please enter at least one application name.")
            return

        for app_name in app_names:
            self.open_application(app_name)

    def open_application(self, app_name):
        try:
            os.startfile(app_name)
        except Exception as e:
            messagebox.showinfo("Error", f"Error opening {app_name}: {e}")

if __name__ == "__main__":
    root = tk.Tk()
    app = TaskbarAppChanger(root)
    root.mainloop()
    
